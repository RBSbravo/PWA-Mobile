# PWA Environment Configuration
# Copy this file to .env.local for local development
# Update these values when deploying to production

# Backend API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# Production URLs (update these with your actual Railway deployment URL)
# VITE_API_URL=https://ticketing-and-task-management-system-production.up.railway.app/api
# VITE_SOCKET_URL=https://ticketing-and-task-management-system-production.up.railway.app

# PWA Configuration
VITE_APP_NAME=MITO Task Manager
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=MITO Task Management System - Progressive Web App

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Debug Mode (set to true for development)
VITE_DEBUG_MODE=false
